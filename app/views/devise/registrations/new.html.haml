= render partial:"stepMeter"
 
.mainframe
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    .mainframe__title
      %b 会員情報入力
    .mainframe__contents
      .mainframe__contents__unit
        = f.label :ニックネーム,class:"mainframe__contents__unit__label"
        %span.mainframe__contents__unit__span 必須
        = f.text_field :nickname ,placeholder:"例)メルカリ太郎"
      .mainframe__contents__unit
        = f.label :メールアドレス,class:"mainframe__contents__unit__label"
        %span.mainframe__contents__unit__span 必須
        = f.email_field :email ,placeholder:"PC・携帯どちらでも可"
      .mainframe__contents__unit
        = f.label :パスワード,class:"mainframe__contents__unit__label"
        %span.mainframe__contents__unit__span 必須
        = f.password_field :password, placeholder:'6文字以上'
      .mainframe__contents__unit
        %b パスワード(確認)
        %span.mainframe__contents__unit__span 必須
        = f.password_field :password_confirmation, placeholder:'6文字以上'
      .mainframe__contents__unit
        %b 本人確認
        %p 安心・安全にご利用いただくために、お客さまの本人情報の登録にご協力ください。他のお客さまに公開されることはありません。
      .mainframe__contents__unit
        %b 姓(全角)
        %span.mainframe__contents__unit__span 必須
        = f.text_field :family_name ,placeholder:"例(山田"
      .mainframe__contents__unit
        %b 名(全角)
        %span.mainframe__contents__unit__span 必須
        = f.text_field :first_name ,placeholder:'例(彩'
      .mainframe__contents__unit
        %b 姓カナ(全角)
        %span.mainframe__contents__unit__span 必須
        = f.text_field :family_name_kana ,placeholder:'例(ヤマダ'
      .mainframe__contents__unit
        %b 名カナ(全角)
        %span.mainframe__contents__unit__span 必須
        = f.text_field :first_name_kana ,placeholder:'例(アヤ'

      .mainframe__contents__unit
        %b 生年月日
        %span.mainframe__contents__unit__span 必須
        .mainframe__contents__unit__lists
          .mainframe__contents__unit__lists__list
            %select{name:"year",id:"yearlist",style:"text-align:-webkit-center"}
              %option{selected:"selected"}--
              -2019.step(1900,-1) do |i|
                %option #{i}
              end
            %i.fas.fa-chevron-down
            %span.mainframe__contents__unit__lists__list__span 年
          .mainframe__contents__unit__lists__list
            %select{name:"month",id:"monthlist"}
              %option{selected:"selected"}--
              -1.step(12,1) do |i|
                %option #{i}
              end
            %i.fas.fa-chevron-down
            %span.mainframe__contents__unit__lists__list__span 月
          .mainframe__contents__unit__lists__list

            %select{name:"day",id:"datelist"}
              %option{selected:"selected"}--
            %i.fas.fa-chevron-down

      .mainframe__contents__unit
        %p.mainframe__contents__unit__sentence1 
          ※本人情報は正しく入力してください。会員登録後、修正するにはお時間を頂く場合があります。
      .mainframe__contents__unit
        :javascript
          function clearcall(code) {
            if(code !== ""){
              $(':submit[name=button]').removeAttr("disabled");
            }
          }    
      .mainframe__contents__unit#rule
        %span 「次へ進む」のボタンを押すことにより、
        =link_to "利用規約","https://www.mercari.com/jp/tos_list/",class:"linkblue"
        %span に同意したものとみなします。
      .mainframe__contents__proceedbutton
        = f.submit "暫定ログイン",id:"linkbutton"
      .mainframe__contents__registerLink
        = link_to '本人情報の登録について>', "https://www.mercari.com/jp/help_center/article/423/",class:"linkblue"

= render partial:"stepMeterFooter"
